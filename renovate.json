{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "schedule:monthly",
    ":enablePreCommit",
    ":maintainLockFilesMonthly"
  ],
  "packageRules": [
    {
      "groupName": "{{packageFileDir}} dependency updates",
      "matchManagers": [
        "pre-commit"
      ]
    }
  ]
}
